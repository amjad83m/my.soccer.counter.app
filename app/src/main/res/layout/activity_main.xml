<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mysoccercounterapp.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Team 1"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Goals: 0"
                android:paddingBottom="4dp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:id="@+id/team_1_goals"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Free Kicks: 0"
                android:paddingBottom="4dp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:id="@+id/team_1_free_kicks"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Corner Kicks: 0"
                android:paddingBottom="4dp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:id="@+id/team_1_corners"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Yellow Cards: 0"
                android:paddingBottom="4dp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:id="@+id/team_1_ycards"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Red Cards: 0"
                android:paddingBottom="4dp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:id="@+id/team_1_rcards"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam1Goal" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Kick"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam1FreeKick"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corner Kick"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam1CornerKick"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yellow Card"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam1YellowCard"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Red Card"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam1RedCards"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Team 2"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/team_2_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Goals: 0"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:fontFamily="casual"/>

            <TextView
                android:id="@+id/team_2_free_kicks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Free Kicks: 0"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:fontFamily="casual"/>

            <TextView
                android:id="@+id/team_2_corners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Corner Kicks: 0"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:fontFamily="casual"/>

            <TextView
                android:id="@+id/team_2_ycards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Yellow Cards: 0"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:fontFamily="casual"/>

            <TextView
                android:id="@+id/team_2_rcards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:text="Red Cards: 0"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:fontFamily="casual"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam2Goal"
                android:text="Goal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam2FreeKick"
                android:text="Free Kick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam2CornerKick"
                android:text="Corner Kick" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam2YellowCard"
                android:text="Yellow Card" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#FFFFFF"
                android:onClick="addTeam2RedCards"
                android:text="Red Card" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:onClick="reset"/>
</RelativeLayout>


